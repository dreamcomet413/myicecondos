<span class="contact-form-title">For a fast response complete the form below</span>
<%= simple_form_for @contact do |f| %>
	<div class="contact-form-firstname">
		<label class="contact-form-label" for"firstname">First Name</label>
		<%= f.input :first_name, :required => true, label: false, input_html: { class: "contact-form-field", placeholder: "Your First Name" } %>
	</div>
	<div class="contact-form-lastname">
		<label class="contact-form-label" for="lastname">Last Name</label>
		<%= f.input :last_name, :required => true, label: false, input_html: { class: "contact-form-field", placeholder: "Your Last Name" } %>
	</div>
	<div class="contact-form-email">
		<label class="contact-form-label" for="email">Email Address</label>
		<%= f.input :email, :required => true, label: false, input_html: { class: "contact-form-field", placeholder: "Your Email Address" } %>
	</div>
	<div class="contact-form-phone">
		<label class="contact-form-label" for="phone">Phone</label>
		<%= f.input :phone, :required => false, label: false, input_html: { class: "contact-form-field", placeholder: "Your Phone Number" } %>
	</div>
	<div class="contact-form-message">
		<label class="contact-form-label" for="message">Message</label>
		<%= f.input :message, :required => true, as: :text, label: false, input_html: { class: "contact-form-field", placeholder: "What you'd like to say..." } %>
	</div>
	<div class="contact-form-phone">
		<label class="contact-form-label" for="phone">Best time to call</label>
		<%= f.input :best_time_to_call, as: :select, include_blank: false, collection: ["Any Time", "ASAP", "Today", "Tomorrow"], label: false, input_html: { class: "contact-form-field"} %>
	</div>
	<div class= "hidden">
    <%= f.input :nickname, :hint => 'Leave this field blank!' %>
  </div>
	<div class="contact-form-footer">
		<button class="contact-form-button" type="submit">Send Message</button>
		<%= link_to image_tag("cloud-realty.jpg", class: "contact-form-logo"), "http://www.cloudrealty.ca", target: "_blank" %>
	</div>
<% end %>
