<div class="main-container">
	<div class="about-us">
		<div class="container">
			<div class="row">
				<div class="col-md-4 col-md-offset-4">
					<div class="devise_box">
	          <center class="title">Forgot your password?</center><br>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group">
	              <%= f.email_field :email, placeholder: "Email Address", class: "form-control" %>
	            </div>
              <div class="actions">
                <%= f.submit "RESET PASSWORD", class: "btn btn-block btn-gold" %>
              </div>
              <br>
							<hr style="margin-top:0;">
							<center>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "gold" %></center>
            <% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
