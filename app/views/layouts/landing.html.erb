      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body class="landing_page">
    <%= yield %>
    <script>
      var mapbox_map = "<%= APP_CONFIG[:mapbox_map] %>";
      var mapbox_token = "<%= APP_CONFIG[:mapbox_token] %>";
      $(function(){
        setByHeight();
        $(window).resize(function() {
          setByHeight();
        });
      });
      function setByHeight(){
        var wh = $(window).height() - 300;
        var lh = $('.landing-search').height();
        var mt = (wh-lh)/2;
        $('.landing-search').css('margin-top', mt);
      }
    </script>
  </body>
</html>
