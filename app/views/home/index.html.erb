<div id="fullpage">
  <section id="header" class="section">
    <div class="header-content">
      <div class="header-content-inner">
        <div class="visible-xs">
          <h1>WELCOME TO THE NEW</h1>
          <br><br>
          <h1 class="page_title">ICE AGE</h1>
        </div>
      </div>
