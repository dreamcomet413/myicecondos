.row
  .col-md-12
    %br
    %h1.pull-left Ice Condos Navigation
    = link_to "New Menu Item", :admin_menu_new, class: "btn btn-primary pull-right"
    .clearfix
    %hr
    - MenuLocation.all.each do |l|
      %table.table.table-striped
        %thead
          %tr
            %th{colspan: 4}
              = l.name
              &nbsp;(
              %i
                = l.description
              )
        %tbody
          %tr
            %td
              %strong Title
            %td
              %strong URL
            %td
              %strong Sort Order
          - if l.menu_items.empty?
            %tr.empty
              %td{colspan: 4} No menu items to display.
          - else
            - for item in l.menu_items
              %tr
                %td{width: "30%"}= item.title
                %td{width: "30%"}= item.url
                %td{width: "20%"}= item.sort_order
                %td
                  = link_to "Edit", admin_view_menu_path(item)
                  &nbsp;|&nbsp;
                  = link_to "Delete", admin_delete_menu_path(item), method: :delete, data: {confirm: "Are you sure?"}
      %hr
